<Window x:Class="DPGI_lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPGI_lab2"
        mc:Ignorable="d"
        Title="Task 1.4 - DockPanel" Height="220" Width="500">
    <DockPanel LastChildFill="False">
        <Label  DockPanel.Dock="Top" HorizontalAlignment="Center">Label</Label>
        <TextBox DockPanel.Dock="Right" Width="200">TextBox</TextBox>
        <TextBox DockPanel.Dock="Left" Width="200">TextBox</TextBox>
        <Button  DockPanel.Dock="Bottom" Width="70" Height="20" Margin="0 0 0 30">Button</Button>
    </DockPanel>
</Window>
